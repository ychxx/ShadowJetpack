<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="ycBg" format="reference|color" />
    <declare-styleable name="YcEdtImg">
        <attr name="ycBg" />
        <attr name="ycImgRight1Bg" format="reference" />
        <attr name="ycImgRight1Visibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
            <enum name="gone" value="2" />
        </attr>
        <attr name="ycImgRight2Bg" format="reference" />
        <attr name="ycImgRight2Visibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
            <enum name="gone" value="2" />
        </attr>
        <attr name="ycImgLeftBg" format="reference" />
        <attr name="ycImgLeftVisibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
            <enum name="gone" value="2" />
        </attr>
        <attr name="ycEdtTextSize" format="dimension" />
        <attr name="ycEdtHint" format="string" />
        <attr name="ycEdtHintColor" format="color" />
        <attr name="ycEdtText" format="string" />
        <attr name="ycEdtTextColor" format="color" />
        <attr name="ycEdtMaxEms" format="string" />
        <attr name="ycEdtDigits" format="string" />
        <attr name="ycEdtInputType">
            <flag name="none" value="0x00000000" />
            <flag name="text" value="0x00000001" />
            <flag name="textPassword" value="0x00000081" />
            <flag name="textVisiblePassword" value="0x00000091" />
            <flag name="number" value="0x00000002" />
            <flag name="numberDecimal" value="0x00002002" />
        </attr>
    </declare-styleable>
    <declare-styleable name="YcBtnCommon">
        <attr name="ycBgIsAble" format="boolean" />
        <attr name="ycBg" />
        <attr name="ycBgEnable" format="reference|color" />
        <attr name="ycTextColor" format="color" />
        <attr name="ycTextColorEnable" format="color" />
    </declare-styleable>



    <declare-styleable name="YcDefaultTextView">
        <attr name="defaultText" format="string" />
        <attr name="textDefaultColor" format="color" />
        <attr name="DefaultTvTextColor" format="color" />
        <attr name="textMaxLength" format="integer" />
    </declare-styleable>


    <declare-styleable name="YcTextButtonView">
        <attr name="TextButtonViewDefaultText" format="string" />
        <attr name="TextButtonViewDefaultTextColor" format="color" />
        <attr name="TextButtonViewTextMaxLength" format="integer" />
        <attr name="TextButtonViewTextColor" format="color" />
        <attr name="TextButtonViewTextColor2" format="color" />
        <attr name="TextButtonViewTextSize" format="dimension" />
        <attr name="TextButtonViewText" format="string" />
        <attr name="TextButtonViewSingleLine" format="boolean" />
        <attr name="TextButtonViewNextImage" format="reference|color" />
    </declare-styleable>


    <!--可绘制的TextView-->
    <declare-styleable name="YcDrawableTextView">
        <attr name="dtvEnableCenterDrawables" format="boolean" />
        <attr name="dtvEnableTextInCenter" format="boolean" />
        <attr name="dtvRadius" format="dimension" />
        <attr name="dtvDrawableStartWidth" format="dimension" />
        <attr name="dtvDrawableStartHeight" format="dimension" />
        <attr name="dtvDrawableTopWidth" format="dimension" />
        <attr name="dtvDrawableTopHeight" format="dimension" />
        <attr name="dtvDrawableEndWidth" format="dimension" />
        <attr name="dtvDrawableEndHeight" format="dimension" />
        <attr name="dtvDrawableBottomWidth" format="dimension" />
        <attr name="dtvDrawableBottomHeight" format="dimension" />
    </declare-styleable>
</resources>