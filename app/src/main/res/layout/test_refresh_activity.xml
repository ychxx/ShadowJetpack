<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnTestRequestFail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置请求为失败" />

    <Button
        android:id="@+id/btnTestRequestSuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置请求为成功" />

    <Button
        android:id="@+id/btnTestSetRequestEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置请求为空数据" />

    <Button
        android:id="@+id/btnTestSetRequestEmptyError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置请求为空数据异常" />

    <Button
        android:id="@+id/btnTestRefreshEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清空列表数据" />

    <Button
        android:id="@+id/btnTestRefreshDataSours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="主动刷新" />

    <Button
        android:id="@+id/btnTestRefreshSpecialShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示特殊布局" />

    <Button
        android:id="@+id/btnTestRefreshSpecialHide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="隐藏特殊布局" />

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/slTestRefresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <FrameLayout
            android:id="@+id/flRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTestRefresh"

                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

</LinearLayout>